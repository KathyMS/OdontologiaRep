{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_horizontal.html.twig' %}

{% block body -%}
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Plan De Tratamiento</h2>
            </div>
            <div class="box-content">
                <table class="table table-bordered table-striped table-condensed">
                    
                    <tbody>
                        <tr>
                            <th style="width: 400px;">Expediente</th>
                            <td>{{ entity.idexpediente }}</td>
                        </tr>
                        <tr>
                            <th>Descripcion</th>
                            <td>{{ entity.descripcion }}</td>
                        </tr>
                        <tr>
                            <th>Fecha</th>
                            <td>{{ entity.fecha|date('Y-m-d') }}</td>
                        </tr>
                    
                    </tbody>
                </table>
            </div>
            <center>
                <table>

                    <ul class="record_actions">
                        <td>
                            <a href="{{ path('plandetratamiento') }}"class="btn btn-primary btn-sm">
                                Volver
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('plandetratamiento_edit', { 'id': entity.id }) }} " class="btn btn-primary btn-sm">
                                Editar
                            </a>
                        </td>

                        {{ form_start(delete_form)}}
                        <td>      
                            {{ form_widget(delete_form) }} 
                        </td>
                        {{ form_end(delete_form)}}

                    </ul>
                    </td>
                </table>
            </center>


        {% endblock %}
        {% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}
