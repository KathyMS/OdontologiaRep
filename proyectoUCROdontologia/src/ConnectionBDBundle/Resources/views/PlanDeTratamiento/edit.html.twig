{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_horizontal.html.twig' %}

{% block body -%}
     <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Editar Plan D Tratamiento</h2>

            </div>
            <center>
                <div class="box-content">
                    <table class="table table-bordered table-striped table-condensed">

                        {{ form_start(edit_form)}}
                        {{form_errors(edit_form)}}
                     <tbody>
                            <tr>
                                <th style="width: 400px;"> Expediente </th>
                                <td>{{form_widget(edit_form.idexpediente)}}
                                    {{ form_errors(edit_form.idexpediente) }}</td>
                            </tr>
                             <tr>
                                <th style="width: 400px;"> Fecha </th>
                                <td>{{form_widget(edit_form.fecha)}}
                                    {{ form_errors(edit_form.fecha) }}</td>
                            </tr>
                             <tr>
                                <th style="width: 400px;"> Descripcion</th>
                                <td>{{form_widget(edit_form.descripcion)}}
                                    {{ form_errors(edit_form.descripcion) }}</td>
                            </tr>
                          
                        </tbody>

                    </table>
                        
                          </div>

                                    <table>
                                        <tr>

                                            <td> {{form_widget(edit_form.submit)}}
                                            </td>


                                            {{ form_end(edit_form)}}
                                            <td>  <a href="{{ path('plandetratamiento') }}" class="btn btn-primary btn-sm">
                                                    Volver
                                                </a>
                                            </td>
                                            {{ form_start(delete_form)}}
                                            <td > 
                                                {{ form_widget(delete_form.submit) }}
                                            </td>
                                                {{ form_end(delete_form)}}

                                        </tr>
                                    </table>
            </center>
        </div>

      
{% endblock %}
