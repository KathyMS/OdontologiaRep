{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_vertical.html.twig' %}
{% block body -%}
    <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2>Crear tratamiento general</h2>
                </div>
                <center>
                    <div class="box-content">
                        <table class="table table-bordered table-striped table-condensed">
                            {{ form_start(form)}}
                            {{form_errors(form)}}
                            <tbody>
                                <tr>
                                    <th style="width: 400px;"> {{ form_label(form.nombreTratamiento) }}</th>
                                    <td>{{form_widget(form.nombreTratamiento)}}
                                        {{ form_errors(form.nombreTratamiento) }}</td>
                                </tr>
                                <tr>
                                    <th style="width: 400px;"> {{ form_label(form.descripcion) }}</th>
                                    <td>{{form_widget(form.descripcion)}}
                                        {{ form_errors(form.descripcion) }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                <table>
                    <tr>

                        <td> {{form_widget(form.submit)}}
                        </td>
                        <td>  <a href="{{ path('tratamientogeneral') }}" class="btn btn-primary btn-sm">
                                Volver
                            </a>
                        </td>

                    </tr>
                </table>

                {{ form_end(form)}}
                </center>
            </div>
{% endblock %}
{% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}
