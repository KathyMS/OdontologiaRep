{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_horizontal.html.twig' %}

{% block body -%}
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Historial Médico</h2>

            </div>
            <div class="box-content">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>            
                            <th>Tabaquismo</th>
                            <th>Alcoholismo</th>
                            <th>Dolor al masticar</th>
                            <th>Rechinado de dientes</th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('historialmedico_show', { 'id': entity.id }) }}">
                                    {%if entity.historialSocialTabaquismo== 1%}
                                        &#x2713 
                                    {%endif%}
                                    {%if entity.historialSocialTabaquismo!= 1%}
                                        Sin Sintomas
                                    {%endif%}</a></td>
                                <td>
                                    {%if entity.historialSocialAlcoholismo== 1%}
                                        &#x2713 
                                    {%endif%}
                                    {%if entity.historialSocialAlcoholismo!= 1%}
                                        Sin Sintomas 
                                    {%endif%}
                                </td>
                                <td>
                                {%if entity.historiaDentalDolorMasticar== 1%}
                                        &#x2713 
                                    {%endif%}
                                {%if entity.historiaDentalDolorMasticar!= 1%}
                                        &#x2713 
                                    {%endif%}</td>
                                <td>
                                {%if entity.historiaDentalRechinadoDientes== 1%}
                                        &#x2713 
                                    {%endif%}
                                {%if entity.historiaDentalRechinadoDientes!= 1%}
                                        Sin Sintomas 
                                    {%endif%}</td>
                                <td>
                                    <ul>
                                        <a href="{{ path('historialmedico_show', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">Ver</a>

                                        <a href="{{ path('historialmedico_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">Editar</a>

                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <center>
                    <ul class="pagination pagination-centered">
                        <li><a href="#">Anterior</a></li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">Siguiente</a></li>
                    </ul>


                    <ul>

                        <a href="{{ path('historialmedico_new') }}">
                            Crear un nuevo historial médico
                        </a>

                    </ul>
                </center>


            {% endblock %}
            {% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}