{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_horizontal.html.twig' %}

{% block body -%}

    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Editar Cita</h2>

            </div>
            <center>
                <div class="box-content">
                    <table class="table table-bordered table-striped table-condensed">

                        {{ form_start(edit_form)}}
                        {{form_errors(edit_form)}}
                        <tbody>
                            <tr>
                                <th style="width: 400px;"> ID Paciente </th>
                                <td>{{form_widget(edit_form.idpaciente)}}
                                    {{ form_errors(edit_form.idpaciente) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> Fecha </th>
                                <td> {{form_widget(edit_form.fecha)}}
                                    {{ form_errors(edit_form.fecha) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> Hora</th>
                                <td> {{form_widget(edit_form.hora)}}
                                    {{ form_errors(edit_form.hora) }}</td>
                            </tr>

                        </tbody>

                    </table>
                </div>

                <table>
                    <tr>

                        <td> {{form_widget(edit_form.submit)}}
                        </td>


                        {{ form_end(edit_form)}}
                        <td>  <a href="{{ path('cita') }}" class="btn btn-primary btn-sm">
                                Volver
                            </a>
                        </td>
                        {{ form_start(delete_form)}}
                        <td > 
                            {{ form_widget(delete_form.submit) }}
                        </td>
                        {{ form_end(delete_form)}}

                    </tr>
                </table>
            </center>
        </div>
    </div>
{% endblock %}
{% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}
