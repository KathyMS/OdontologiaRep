{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_horizontal.html.twig' %}

{% block body -%}

    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Lista de Citas</h2>

            </div>
            <div class="box-content">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>

                            <th>ID Paciente</th>
                            <th>Fecha</th>
                            <th>Hora</th>


                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>

                                <td><a href="{{ path('cita_show', { 'id': entity.id }) }}">{{ entity.idpaciente }}</td>
                                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                                <td>{{ entity.hora|date('H:i')  }}</td>
                                <td>
                                    <ul>

                                        <a href="{{ path('cita_show', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">Ver</a>


                                        <a href="{{ path('cita_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">Editar</a>

                                    </ul>
                                </td>

                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
                <center>
                    <ul class="pagination pagination-centered">
                        <li><a href="#">Anterior</a></li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">Siguiente</a></li>
                    </ul>
                </center>
            </div>
            <center>
                <ul>

                    <a href="{{ path('cita_new') }}">
                        <strong>Ingresar una Nueva Cita </strong>
                    </a>

                </ul>
            </center>
        </div>

    </div><!--/span-->


{% endblock %}
{% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}