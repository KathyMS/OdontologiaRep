{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_horizontal.html.twig' %}


{% block body -%}

    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Examen Radiológico</h2>

            </div>
            <div class="box-content">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Cresta Alveolar</th>
                            <th>Lamina Dura</th>               
                            <th>Calculo</th>
                            <th>Caries</th>
                            <th>Cond. de Furcaciones</th>
                            <th>Anomalias Dentales</th>                                                  
                            <th>Comentarios</th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.crestaAlveolar }}</td>
                                <td>{{ entity.laminaDura }}</td>
                               
                                <td>{{ entity.calculo }}</td>
                                <td>{{ entity.caries }}</td>
                                <td>{{ entity.furcaciones }}</td>
                                <td>{{ entity.anomaliasDentales }}</td>            
                                <td>{{ entity.comentarios }}</td>
                                <td>
                                    <ul>
                                        <a href="{{ path('examenradiologico_show', { 'id': entity.id }) }}"class="btn btn-primary btn-sm">Ver</a>

                                        <a href="{{ path('examenradiologico_edit', { 'id': entity.id }) }}"class="btn btn-primary btn-sm">Editar</a>

                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>


                <center>
                    <ul class="pagination pagination-centered">
                        <li><a href="#">Anterior</a></li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">Siguiente</a></li>
                    </ul>
                </center>
            </div>
            <center>
                <ul>

                    <a href="{{ path('examenradiologico_new') }}">
                        <strong>Ingresar un Nuevo Examen Radiológico </strong>
                    </a>

                </ul>
            </center>
        </div>

    </div><!--/span-->

{% endblock %}

{% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}
