{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_vertical.html.twig' %}
{% block body -%}
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Crear Paciente</h2>
            </div>
            <center>
                <div class="box-content">
                    <table class="table table-bordered table-striped table-condensed">
                        {{ form_start(form)}}
                        {{form_errors(form)}}
                        <tbody>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(form.nombre) }}</th>
                                <td>{{form_widget(form.nombre)}}
                                    {{ form_errors(form.nombre) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(form.telefono) }}</th>
                                <td>{{form_widget(form.telefono)}}
                                    {{ form_errors(form.telefono) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(form.correoElectronico) }}</th>
                                <td>{{form_widget(form.correoElectronico)}}
                                    {{ form_errors(form.correoElectronico) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(form.practicante) }}</th>
                                <td>{{form_widget(form.practicante)}}
                                    {{ form_errors(form.practicante) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(form.cedula) }}</th>
                                <td>{{form_widget(form.cedula)}}
                                    {{ form_errors(form.cedula) }}</td>
                            </tr>
                    </table>
                </div>
                <table>
                    <tr>

                        <td> {{form_widget(form.submit)}}
                        </td>
                        <td>  <a href="{{ path('odontologo') }}" class="btn btn-primary btn-sm">
                                Volver
                            </a>
                        </td>

                    </tr>
                </table>

                {{ form_end(form)}}
            </center>
        </div>
    {% endblock %}
    {% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}