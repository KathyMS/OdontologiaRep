{% include 'AdministradorBundle:Default:administrador_header.html.twig' %}
{% include 'AdministradorBundle:Default:administrador_menu_vertical.html.twig' %}

{% block body -%}
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Editar Odont√≥logo</h2>
            </div>
            <center>
                <div class="box-content">
                    <table class="table table-bordered table-striped table-condensed">
                        {{ form_start(edit_form)}}
                        {{form_errors(edit_form)}}
                        <tbody>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(edit_form.nombre) }}</th>
                                <td>{{form_widget(edit_form.nombre)}}
                                    {{ form_errors(edit_form.nombre) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(edit_form.telefono) }}</th>
                                <td>{{form_widget(edit_form.telefono)}}
                                    {{ form_errors(edit_form.telefono) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(edit_form.correoElectronico) }}</th>
                                <td>{{form_widget(edit_form.correoElectronico)}}
                                    {{ form_errors(edit_form.correoElectronico) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(edit_form.practicante) }}</th>
                                <td>{{form_widget(edit_form.practicante)}}
                                    {{ form_errors(edit_form.practicante) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 400px;"> {{ form_label(edit_form.cedula) }}</th>
                                <td>{{form_widget(edit_form.cedula)}}
                                    {{ form_errors(edit_form.cedula) }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <table>
                    <tr>

                        <td> {{form_widget(edit_form.submit)}}
                        </td>


                        {{ form_end(edit_form)}}
                        <td>  <a href="{{ path('odontologo') }}" class="btn btn-primary btn-sm">
                                Volver
                            </a>
                        </td>
                        {{ form_start(delete_form)}}
                        <td > 
                            {{ form_widget(delete_form.submit) }}
                        </td>
                        {{ form_end(delete_form)}}

                    </tr>
                </table>
            </center>
        </div>


    {% endblock %}
    {% include 'AdministradorBundle:Default:administrador_footer.html.twig' %}